<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_cart"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/colorBlueLight"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/image_cart_item"
                android:layout_below="@+id/name_cart_item"
                android:layout_marginTop="10dp"
                android:layout_width="190dp"
                android:layout_height="180dp"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/name_cart_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:textSize="29sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                />

            <TextView
                android:id="@+id/category_cart_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_category"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/image_cart_item"
                android:layout_toEndOf="@id/image_cart_item"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/name_cart_item"
                />


            <TextView
                android:id="@+id/quantity_cart_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quantity_cart"
                android:textSize="21sp"
                android:textColor="@color/colorBlue"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/image_cart_item"
                android:layout_toEndOf="@id/image_cart_item"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/category_cart_item"
                />

            <TextView
                android:id="@+id/price_cart_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_price"
                android:textSize="25sp"
                android:textColor="#000"
                android:textStyle="normal"
                android:layout_toRightOf="@+id/image_cart_item"
                android:layout_toEndOf="@id/image_cart_item"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/quantity_cart_item"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
