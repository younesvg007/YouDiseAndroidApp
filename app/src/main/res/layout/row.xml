<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/image_product_item"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/name_product_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:textSize="22sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/image_product_item"
                android:layout_toEndOf="@id/image_product_item"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/description_product_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_describe"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/image_product_item"
                android:layout_toEndOf="@id/image_product_item"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/name_product_item"
                />
            <TextView
                android:id="@+id/price_product_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_price"
                android:textSize="19sp"
                android:textColor="#000"
                android:textStyle="normal"
                android:layout_toRightOf="@+id/image_product_item"
                android:layout_toEndOf="@id/image_product_item"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/description_product_item"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

