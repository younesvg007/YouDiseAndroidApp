<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.CategoryAdminActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_admin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/close_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_setting"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/slogan_category1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/toolbar_admin"
        android:text="@string/add_new_product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_category1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/mobile1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/mobile"
            />

        <ImageView
            android:id="@+id/watches1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/watch"
            />

        <ImageView
            android:id="@+id/laptops1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/laptop"
            />

        <ImageView
            android:id="@+id/headphones1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/headphone"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_category_layout1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/sweathers1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sweather"
            />

        <ImageView
            android:id="@+id/female_dress1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/female_dress"
            />

        <ImageView
            android:id="@+id/sport1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sport"
            />
        <ImageView
            android:id="@+id/tshirts1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/shirt"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2_category_layout1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/shoes1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/shoes"
            />

        <ImageView
            android:id="@+id/hats1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/hat"
            />

        <ImageView
            android:id="@+id/purse_bag_wallet1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/purse"
            />

        <ImageView
            android:id="@+id/glasses1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/glasses"
            />
    </LinearLayout>

</RelativeLayout>